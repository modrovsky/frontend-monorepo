{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "nom-web#build": {
      "dependsOn": ["^build"],
      "env": [
        "API_ENDPOINT",
        "EDGE_API_ORIGIN",
        "CLOUDFLARE_ACCT_HASH",
        "PUSHER_KEY",
        "INFURA_PROJECT_ID",
        "WALLET_CONNECT_PROJECT_ID"
      ],
      "outputs": ["dist/**"]
    },
    "nouns-camp#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "obvious-landing#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "farcord#build": {
      "dependsOn": ["^build"],
      "env": [
        "FARCASTER_HUB_RPC_ENDPOINT",
        "NEYNAR_API_KEY",
        "INFURA_PROJECT_ID",
        "WALLET_CONNECT_PROJECT_ID",
        "WARPCAST_API_TOKEN",
        "FARCORD_APP_FID",
        "FARCORD_APP_MNEMONIC"
      ],
      "outputs": ["dist/**"]

    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
